<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="kernel.subscriber.rc.route.subscriber.class">RC\PHPCRMenuNodeFromRoutesBundle\Events\RouteSubscriber</parameter>
        <parameter key="rc.route.added.listener.class">RC\PHPCRMenuNodeFromRoutesBundle\Events\RouteListener</parameter>
    </parameters>
    
	<services>
		<service id="kernel.subscriber.rc.route.subscriber" class="%kernel.subscriber.rc.route.subscriber.class%">
	    	<tag name="kernel.event_subscriber" />
		</service>
		
		<service id="rc.route.added.listener" class="%rc.route.added.listener.class%">
		 	<tag name="kernel.event_listener" event="rc.route.added" method="onRouteAdded" />
		</service>
		
	</services>
    
</container>
